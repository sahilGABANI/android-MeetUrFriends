<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_tab_purple</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_tab_purple</item>
        <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="NewAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_tab_purple</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_tab_purple</item>
        <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    <style name="ThemeMaterialCalender" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="NewHomeReelsTabLayoutTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/lexend_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MusicTabLayoutTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/lexend_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/lexend_regular</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="ProfileTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/lexend_regular</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ProfileTabLayoutTextAppearanceForHashTag" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/lexend_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="textstyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color_tab_purple</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/lexend_regular</item>
        <item name="android:background">@drawable/round_grey_drawable</item>
    </style>

    <style name="DrawerHamburgerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="locationSwitch" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.BlueSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/metropolis_regular</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>

    <style name="LibAppThemeCustom" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="toolbarStyle">@style/ToolbarTheme</item>
        <item name="tabStyle">@style/PickerTabLayoutCustom</item>
    </style>

    <style name="PickerTabLayoutCustom" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@color/colorPrimaryDark</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
    </style>

    <style name="BSDialogThemeR" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:statusBarColor">@color/color_transparent</item>
        <item name="android:navigationBarColor">@color/color_transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>


    <style name="BSDialogTheme" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:statusBarColor">@color/color_transparent</item>
        <item name="android:navigationBarColor">@color/color_transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="behavior_draggable">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorAccent">@color/color_tab_purple</item>
    </style>

    <style name="BSViewDialogTheme" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:statusBarColor">@color/color_transparent</item>
        <item name="android:navigationBarColor">@color/color_transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="behavior_draggable">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorAccent">@color/color_tab_purple</item>
    </style>

    <style name="BSDialogThemeRegular" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:statusBarColor">@color/color_transparent</item>
        <item name="android:navigationBarColor">@color/color_transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="behavior_draggable">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorAccent">@color/color_tab_purple</item>
    </style>

    <style name="MyDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="colorAccent">@color/color_tab_purple</item>
        <item name="android:windowBackground">@color/color_transparent</item>
    </style>

    <style name="Widget.SocialView" parent="android:Widget.TextView">
        <item name="hashtagColor">?colorAccent</item>
        <item name="mentionColor">?colorAccent</item>
        <item name="hyperlinkColor">?colorAccent</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/color_A6A6B0</item>
        <item name="colorControlActivated">@color/color_FFC94D</item>
    </style>

    <style name="CustomPopupMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
    </style>

</resources>