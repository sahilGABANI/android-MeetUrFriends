<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_40sdp" />
            <solid android:color="#ECE2FF" />
            <stroke android:color="#ECE2FF" android:width="1dp"/>
            <size android:height="@dimen/_20sdp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_40sdp" />
            <solid android:color="@color/color_tab_purple" />
            <stroke android:color="@color/color_tab_purple" android:width="1dp"/>
            <size android:height="@dimen/_20sdp" />
        </shape>
    </item>
</selector>