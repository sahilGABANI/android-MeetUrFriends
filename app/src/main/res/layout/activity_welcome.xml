<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ui.activities.WelcomeActivity"
    android:background="@drawable/bg_bottom_sheet">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/welcomeScreenLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_muf_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_above="@id/llBottomView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/llBottomView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingVertical="@dimen/_20sdp"
        android:layout_alignParentBottom="true">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWelcomeBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexend_semi_bold"
            android:text="@string/welcome_back"
            android:textColor="@color/smoky_black"
            android:textSize="@dimen/_20ssp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWelcomeBackDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvWelcomeBack"
            android:layout_marginVertical="@dimen/_5sdp"
            android:fontFamily="@font/lexend_regular"
            android:text="@string/welcome_back_desc"
            android:textColor="@color/color_545460"
            android:textSize="@dimen/_14ssp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvWelcomeBackDesc"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/bg_edittext"
            android:backgroundTint="@color/color_tab_purple"
            android:fontFamily="@font/lexend_medium"
            android:gravity="center"
            android:paddingVertical="@dimen/_12sdp"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRegisterBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLoginBtn"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/bg_edittext"
            android:backgroundTint="@color/cultured"
            android:fontFamily="@font/lexend_medium"
            android:gravity="center"
            android:paddingVertical="@dimen/_12sdp"
            android:text="@string/create_account"
            android:textColor="@color/smoky_black"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>

</LinearLayout>