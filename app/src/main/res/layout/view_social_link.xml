<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rlLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="@dimen/_10sdp"
        android:background="@drawable/bg_ediitext_border"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingVertical="@dimen/_5sdp"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSocialType"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_facebook"
            android:layout_centerVertical="true" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            tools:text="www.facebook.com"
            android:textColor="@color/color_text_black"
            android:fontFamily="@font/lexend_regular"
            android:layout_toEndOf="@id/ivSocialType"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toStartOf="@id/ivRemove"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_centerVertical="true"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivRemove"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/close_icon_grey"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:tint="@color/color_F8375B"
            android:padding="@dimen/_4sdp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>