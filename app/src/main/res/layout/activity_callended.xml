<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp"
        tools:context=".Activity.AudioCallActivity">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mBack"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:fontFamily="@font/metropolis_regular"
            android:text="@string/_00_00"
            android:textColor="@color/textColor_red"
            android:textSize="@dimen/_15sdp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mImage"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:src="@drawable/ic_user_profile_pic_new" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/metropolis_bold"
            android:text="@string/label_jhon_smith"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />



        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_40sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mCall"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/round_app_color"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_cut_call" />


        </LinearLayout>
    </LinearLayout>
</layout>