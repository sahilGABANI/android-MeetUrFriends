<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivPostPicture"
        android:layout_width="match_parent"
        android:layout_height="@dimen/post_height"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPostTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivVideoIcon"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"
        android:src="@drawable/ic_play_icon_new"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/ivPostPicture"
        app:layout_constraintLeft_toLeftOf="@id/ivPostPicture"
        app:layout_constraintRight_toRightOf="@id/ivPostPicture"
        app:layout_constraintTop_toTopOf="@id/ivPostPicture" />
</androidx.constraintlayout.widget.ConstraintLayout>